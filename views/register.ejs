<%- include('partials/header') %>

<div class="container-fluid">
	<div class="row" style="margin-top:150px;">
		<div class="col-sm-12 col-md-7 col-lg-5 mx-auto">
			<form class="border border-light p-5 z-depth-1-half" method="POST" action="/register">

				<p class="h4 mb-4">Sign up</p>

				<!-- Grid row -->

				<%if(typeof error !== undefined && error != ""){%>
				<div class="alert alert-danger" role="alert">
					<%=error%>
				</div>
				<%}%>
					
		    <div class="form-group row">
			    <label for="Username" class="col-sm-2 col-form-label"><i class="fas fa-user prefix"></i></label>
			    <div class="col-sm-10">
			      <div class="md-form mt-0">
			        <input type="text" class="form-control" id="UserName" required name="username" placeholder="Username *">
			      </div>
			    </div>
			  </div>

		    <div class="form-group row">
			    <label for="inputPassword3MD" class="col-sm-2 col-form-label"><i class="fas fa-key prefix"></i></label>
			    <div class="col-sm-10">
			      <div class="md-form mt-0">
			        <input type="password" class="form-control" id="Passowrd" required name="password" placeholder="Password *">
			        <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
		        		Use 8 character password for more security
		    		</small>
			      </div>
			    </div>
			  </div>

			  <div class="form-group row">
			    <label for="inputPassword3MD" class="col-sm-2 col-form-label"><i class="fas fa-unlock prefix"></i></label>
			    <div class="col-sm-10">
			      <div class="md-form mt-0">
			        <input type="password" class="form-control" id="Passowrd" required name="confirmPassword" placeholder="Confirm Password *">
			        <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
		        		Use 8 character password for more security
		    		</small>
			      </div>
			    </div>
			  </div>
		    <button class="btn btn-primary my-4 btn-block" type="submit">Sign Up</button>

		    <p>By clicking
		        <em>Sign up</em> you agree to our
		        <a href="" target="_blank">terms and conditions</a></p>

		        <p>Already have an
		        <em>Account?</em> Login
		        <a href="/login">Here</a>

		</form>
</div>

</div>
</div>
<%- include('partials/footer') %>